<!-- <h1>Listing portfolio_counters</h1>
 -->
<table>
  <thead>
    <tr>
      <th>Counter</th>
      <th>Price</th>
      <th>Purchasedate</th>
      <th>Size</th>
      <th>Total Cost</th>
      <th></th>
      <th></th>

    </tr>
  </thead>

  <tbody>
    <% @portfolio_counters.each do |portfolio_counter| %>
      <tr>
        <td><%= Counter.find(portfolio_counter.cid).fullname %></td>
        <td><%= portfolio_counter.price %></td>
        <td><%= portfolio_counter.purchasedate %></td>
        <td><%= portfolio_counter.size %></td>
        <td><%= portfolio_counter.size * portfolio_counter.price %></td>
        <td><%= link_to 'Edit', edit_portfolio_counter_path(portfolio_counter) %></td>
        <td><%= link_to 'Destroy', portfolio_counter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

